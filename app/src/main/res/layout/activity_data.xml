<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.echo.eui.views.DataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/data_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="id" />

        <EditText
            android:id="@+id/data_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="name" />

        <EditText
            android:id="@+id/data_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="pass" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/data_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加数据" />

        <Button
            android:id="@+id/data_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新数据" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/data_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除一条数据" />

        <Button
            android:id="@+id/data_multiDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除多条数据" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/data_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询一条数据" />

        <Button
            android:id="@+id/data_multiFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询多条数据" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/data_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分页查询数据" />

        <Button
            android:id="@+id/data_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询所有数据" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/data_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取总记录数" />

    </LinearLayout>

    <TextView
        android:id="@+id/data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data" />

</LinearLayout>
